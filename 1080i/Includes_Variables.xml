        <value condition="Container.Content(Movies) + String.IsEmpty(ListItem.Trailer)">$INFO[ListItem.Year,, • ]$INFO[ListItem.Duration,, $LOCALIZE[31038]]$VAR[MPAAS, • Rated ]</value>
