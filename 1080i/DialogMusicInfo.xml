<?xml version="1.0" encoding="UTF-8"?>
<window id="135">
  <defaultcontrol always="true">300</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <include>OpenClose</include>
  <controls>
    <include>BlackBackground</include>
      <control type="image">
        <include>Dimensions_Fullscreen</include>
        <include>Fanart_Fade</include>
        <texture background="true">$INFO[ListItem.Property(fanart_image)]</texture>
        <colordiffuse>30ffffff</colordiffuse>
        <aspectratio>stretch</aspectratio>
      </control>
    <include>Header</include>
    <control type="group">
      <control type="group" description="Thumbs">
        <left>0</left>
        <top>6</top>
        <control type="image" description="Icon">
          <left>1320</left>
          <top>270</top>
          <width>570</width>
          <height>570</height>
          <aspectratio align="right" aligny="top">keep</aspectratio>
          <texture fallback="DefaultVideo.png">$INFO[ListItem.Art(thumb)]</texture>
        </control>
      </control>
      <control type="group" description="Top info">
        <left>-30</left>
        <top>-486</top>
        <include>MusicInfo</include>
        <control type="textbox" description="Plot">
          <left>90</left>
          <top>1068</top>
          <width>1050</width>
          <height>258</height>
          <font>size33</font>
          <align>justify</align>
          <autoscroll delay="6500" time="4000" repeat="10000"></autoscroll>
          <label>$INFO[ListItem.Property(Album_Description)]</label>
        </control>
        <control type="textbox" description="Plot">
          <visible>String.IsEmpty(ListItem.Property(Album_Description))</visible>
          <left>90</left>
          <top>1068</top>
          <width>1050</width>
          <height>258</height>
          <font>size33</font>
          <align>justify</align>
          <autoscroll delay="6500" time="4000" repeat="10000"></autoscroll>
          <label>$INFO[ListItem.Property(Artist_Description)]</label>
        </control>
      </control>
    </control>
    <control type="label" description="Path">
      <visible>Skin.HasSetting(ShowFileInfo)</visible>
      <left>60</left>
      <top>990</top>
      <width>1800</width>
      <height>27</height>
      <font>size22</font>
      <align>left</align>
      <textcolor>whitesmoke</textcolor>
      <haspath>true</haspath>
      <scroll>true</scroll>
      <label>$INFO[ListItem.FilenameAndPath]</label>
    </control>
    <control type="group" description="Options">
      <control type="grouplist" id="300">
        <left>15</left>
        <top>1000</top>
        <width>1890</width>
        <height>80</height>
        <itemgap>20</itemgap>
        <aligny>bottom</aligny>
        <align>center</align>
        <onup>50</onup>
        <orientation>horizontal</orientation>
        <control type="button" id="6" description="Album Info">
          <height>60</height>
          <width>270</width>
          <label>-</label>
          <font>size27</font>
        </control>
        <control type="button" id="7" description="User Rating">
          <height>60</height>
          <width>270</width>
          <label>-</label>
          <font>size27</font>
        </control>
        <control type="button" id="10" description="Get artist thumbnail / Get album thumbnail">
          <height>60</height>
          <width>270</width>
          <label>-</label>
          <font>size27</font>
        </control>
        <control type="button" id="12" description="Get artist fanart image">
          <height>60</height>
          <width>270</width>
          <label>13405</label>
          <font>size27</font>
        </control>
      </control>
    </control>
  </controls>
</window>
