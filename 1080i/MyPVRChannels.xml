<?xml version="1.0" encoding="UTF-8"?>
<window>
    <views>11,12</views>
    <defaultcontrol>11</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>aliceblue</backgroundcolor>
    <include>OpenClose</include>
    <controls>
        <include>BlackBackground</include>
        <control type="label" id="29">
            <include>Heading</include>
            <label>-</label>
        </control>
        <control type="group">
            <description>Small Media Window</description>
            <include>Icon_Fade</include>
            <top>90</top>
            <left>120</left>
            <control type="image">
                <visible>!Player.HasMedia</visible>
                <width>760</width>
                <height>495</height>
                <texture>pvr/tvset.png</texture>
            </control>
            <control type="image">
                <visible>Player.HasMedia</visible>
                <width>760</width>
                <height>495</height>
                <texture>images/black.png</texture>
            </control>
            <control type="videowindow">
                <width>760</width>
                <height>495</height>
                <visible>Player.HasVideo</visible>
            </control>
            <control type="visualisation">
                <width>760</width>
                <height>495</height>
                <visible>Player.HasAudio</visible>
            </control>
        </control>
        <control type="group" id="50">
            <include>OpenClose</include>
            <control type="group">
                <description>TV Channels group</description>
                <include>VisibleFade</include>
                <control type="grouplist">
                    <top>600</top>
                    <left>120</left>
                    <itemgap>15</itemgap>
                    <control type="label">
                        <width>790</width>
                        <height>30</height>
                        <font>size26</font>
                        <textcolor>gray</textcolor>
                        <align>center</align>
                        <label>$INFO[Container(11).ListItem.StartTime] • [COLOR=red][B]$INFO[Container(11).ListItem.Title][/B][/COLOR] • $INFO[Container(11).ListItem.EndTime]</label>
                    </control>
                    <control type="label">
                        <width>760</width>
                        <height>30</height>
                        <font>font12</font>
                        <textcolor>gray</textcolor>
                        <align>center</align>
                        <scroll>false</scroll>
                        <visible>!String.IsEmpty(Container(11).ListItem.NextTitle)</visible>
                        <label>$LOCALIZE[19031]: $INFO[Container(11).ListItem.NextTitle]</label>
                    </control>
                    <control type="progress">
                        <description>Progressbar</description>
                        <left>100</left>
                        <width>760</width>
                        <height>8</height>
                        <texturebg border="6,6,6,6">MusicOSD/ProgressBG.png</texturebg>
                        <midtexture border="6,6,6,6">MusicOSD/ProgressM.png</midtexture>
                        <righttexture border="0,6,0,6">MusicOSD/ProgressR.png</righttexture>
                        <lefttexture border="0,6,0,6">MusicOSD/ProgressL.png</lefttexture>
                        <visible>Container(11).ListItem.HasEpg</visible>
                        <info>Container(11).ListItem.Progress</info>
                    </control>
                    <control type="textbox">
                        <description>Plot Value for TVShow</description>
                        <width>760</width>
                        <height>280</height>
                        <align>justify</align>
                        <label>$INFO[Container(11).ListItem.Plot]</label>
                        <autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
                    </control>
                </control>
                <control type="group">
                    <left>1020</left>
                    <top>96</top>
                    <include>LargeListItemCount</include>
                    <control type="fixedlist" id="11">
                        <width>802</width>
                        <height>984</height>
                        <onleft>9000</onleft>
                        <onright condition="!Skin.HasSetting(Scrollbars_Passive)">60</onright>
                        <onright condition="Skin.HasSetting(Scrollbars_Passive)">noop</onright>
                        <onup>11</onup>
                        <ondown>11</ondown>
                        <pagecontrol>60</pagecontrol>
                        <viewtype label="535">list</viewtype>
                        <focusposition>3</focusposition>
                        <movement>4</movement>
                        <preloaditems>4</preloaditems>
                        <scrolltime>250</scrolltime>
                        <itemlayout width="802" height="111">
                            <control type="label">
                                <animation condition="String.IsEmpty(ListItem.Title)" effect="slide" start="0,0" end="0,18" time="0" reversible="true">Conditional</animation>
                                <left>40</left>
                                <width>700</width>
                                <include>BigListTitle</include>
                                <label>$INFO[ListItem.ChannelNumber]$INFO[ListItem.Label, • ]</label>
                            </control>
                            <control type="label">
                                <left>45</left>
                                <width>640</width>
                                <include>BigListDetails</include>
                                <info>ListItem.Title</info>
                            </control>
                            <control type="image">
                                <left>710</left>
                                <top>15</top>
                                <width>81</width>
                                <height>81</height>
                                <aspectratio>keep</aspectratio>
                                <texture>$INFO[ListItem.Icon]</texture>
                                <visible>![ListItem.IsRecording | ListItem.HasTimer]</visible>
                            </control>
                            <control type="image" description="rec">
                                <left>720</left>
                                <top>15</top>
                                <height>81</height>
                                <width>81</width>
                                <texture>pvr/rec.png</texture>
                                <visible>ListItem.IsRecording</visible>
                            </control>
                            <control type="image" description="timer">
                                <left>720</left>
                                <top>15</top>
                                <height>81</height>
                                <width>81</width>
                                <texture>pvr/timer.png</texture>
                                <visible>!ListItem.IsRecording + ListItem.HasTimer</visible>
                            </control>
                        </itemlayout>
                        <focusedlayout height="111" width="802">
                            <control type="group">
                                <animation effect="zoom" time="120" start="100" end="105" center="auto" tween="Back" easing="Out">Focus</animation>
                                <control type="image">
                                    <top>22</top>
                                    <left>-50</left>
                                    <height>100</height>
                                    <width>905</width>
                                    <texture>shadow.png</texture>
                                </control>
                                <control type="image">
                                    <height>100</height>
                                    <width>805</width>
                                    <texture border="8">images/White.png</texture>
                                </control>
                                <control type="label">
                                    <animation condition="String.IsEmpty(ListItem.Title)" effect="slide" start="0,0" end="0,18" time="0" reversible="true">Conditional</animation>
                                    <left>40</left>
                                    <width>700</width>
                                    <include>BigListTitleFO</include>
                                    <label>$INFO[ListItem.ChannelNumber]$INFO[ListItem.Label, • ]</label>
                                </control>
                                <control type="label">
                                    <left>45</left>
                                    <width>640</width>
                                    <include>BigListDetailsFO</include>
                                    <info>ListItem.Title</info>
                                </control>
                                <control type="image">
                                    <left>710</left>
                                    <top>15</top>
                                    <width>81</width>
                                    <height>81</height>
                                    <aspectratio>keep</aspectratio>
                                    <texture>$INFO[ListItem.Icon]</texture>
                                    <visible>![ListItem.IsRecording | ListItem.HasTimer]</visible>
                                </control>
                                <control type="image" description="rec">
                                    <left>720</left>
                                    <top>15</top>
                                    <height>81</height>
                                    <width>81</width>
                                    <texture>pvr/rec.png</texture>
                                    <visible>ListItem.IsRecording</visible>
                                </control>
                                <control type="image" description="timer">
                                    <left>720</left>
                                    <top>15</top>
                                    <height>81</height>
                                    <width>81</width>
                                    <texture>pvr/timer.png</texture>
                                    <visible>!ListItem.IsRecording + ListItem.HasTimer</visible>
                                </control>
                            </control>
                        </focusedlayout>
                    </control>
                </control>
                <control type="scrollbar" id="60">
                    <left>39r</left>
                    <top>135</top>
                    <height>870</height>
                    <onleft>11</onleft>
                    <onright>noop</onright>
                </control>
            </control>
        </control>
        <include>PVRsidemenu</include>
    </controls>
</window>
