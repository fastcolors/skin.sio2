<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="115">
    <defaultcontrol always="true">901</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <zorder>5</zorder>
    <include>OpenClose</include>
    <visible>Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Player.ShowInfo | Window.IsActive(videoosd) | Window.IsActive(musicosd) | Window.IsActive(playerprocessinfo) | !String.IsEmpty(Player.SeekNumeric) | !String.IsEmpty(PVR.ChannelNumberInput)</visible>
  	<visible>![Window.IsActive(sliderdialog) | Window.IsActive(pvrosdchannels)]</visible>
  	<visible>Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)</visible><animation effect="fade" start="0" end="100" time="400">Visible</animation>
    <animation effect="fade" start="100" end="0" time="100">Hidden</animation>
    <controls>
        <control type="grouplist">
            <centerleft>860</centerleft>
            <bottom>120</bottom>
            <orientation>horizontal</orientation>
            <control type="image" description="Seek time label">
                <visible>!String.StartsWith(Player.SeekStepSize,-) + Player.Seeking</visible>
                <height>60</height>
                <width>60</width>
                <texture>images/FWD.png</texture>
                <animation effect="fade" time="200">VisibleChange</animation>
            </control>
            <control type="image" description="Seek time label">
                <visible>String.StartsWith(Player.SeekStepSize,-) + Player.Seeking</visible>
                <height>60</height>
                <width>60</width>
                <texture>images/BWD.png</texture>
                <animation effect="fade" time="200">VisibleChange</animation>
            </control>
             <control type="label" description="Seek time label">
                <height>60</height>
                <width>600</width>
                <label>$INFO[Player.SeekStepSize]</label>
                <animation effect="fade" time="200">VisibleChange</animation>
            </control>
        </control>
        <control type="group">
            <control type="progress" id="401" description="Progress Bar">
                <top>970</top>
                <left>110</left>
                <width>1700</width>
                <height>10</height>
                <reveal>true</reveal>
                <texturebg border="4">Seekbar/ProgressBG.png</texturebg>
                <lefttexture border="4">Seekbar/ProgressL.png</lefttexture>
                <midtexture>Seekbar/ProgressM.png</midtexture>
                <righttexture border="4">Seekbar/ProgressR.png</righttexture>
                <info>Player.Progress</info>
            </control>
            <control type="label">
                <top>985</top>
                <left>110</left>
                <width>195</width>
                <height>30</height>
                <label>$INFO[Player.Time]</label>
                <textcolor>lightgray</textcolor>
                <shadowcolor>black</shadowcolor>
                <font>size26</font>
            </control>
            <control type="label">
                <top>985</top>
                <right>110</right>
                <height>30</height>
                <width>295</width>
                <align>right</align>
                <label>- $INFO[Player.TimeRemaining] / $INFO[Player.FinishTime]</label>
                <textcolor>lightgray</textcolor>
                <shadowcolor>black</shadowcolor>
                <font>size26</font>
            </control>
            <control type="label" description="Title">
                <left>120</left>
                <bottom>110</bottom>
                <height>60</height>
                <width>940</width>
                <scroll>true</scroll>
                <font>size33B</font>
                <label>[B]$INFO[VideoPlayer.Title][/B]</label>
            </control>
        </control>
        <control type="image" description="Buffer icon">
            <visible>Player.Caching</visible>
            <left>0</left>
            <include>OSDbarIcons</include>
            <texture border="2">busy/Busy.png</texture>
            <animation effect="rotate" start="360" end="0" center="auto" time="1200" loop="true" pulse="true" condition="true">conditional</animation>
        </control>
    </controls>
</window>
