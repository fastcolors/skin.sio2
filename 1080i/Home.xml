<?xml version="1.0" encoding="UTF-8"?>
<window>
    <backgroundcolor>aliceblue</backgroundcolor>
    <defaultcontrol always="true">9000</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <onload>RunScript(script.favourites)</onload>
    <onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000)</onload>
    <include>OpenClose</include>
    <controls>
        <control type="group" description="Furniture">
            <include>homeanimation</include>
            <control type="image" description="Stage">
                <visible>Skin.HasTheme(Dark)</visible>
                <width>1920</width>
                <height>2160</height>
                <aspectratio>stretch</aspectratio>
                <texture>special://skin/resources/DarkHomeBG.png</texture>
            </control>
            <control type="image" description="Stage">
                <visible>!Skin.HasTheme(Dark)</visible>
                <width>1920</width>
                <height>2160</height>
                <aspectratio>stretch</aspectratio>
                <texture>special://skin/resources/HomeBG.png</texture>
            </control>
            <control type="image" description="banda bianca">
                <top>694</top>
                <left>-35</left>
                <width>1990</width>
                <height>286</height>
                <aspectratio>stretch</aspectratio>
                <texture border="8" colordiffuse="bandabianca">images/White.png</texture>
            </control>
        </control>
        <control type="button" id="9009">
            <focusedcolor>white</focusedcolor>
            <include>ShelfFade</include>
            <include>ShelfTitle</include>
            <label>[B] $VAR[shelflabel] [/B]</label>
            <texturefocus>-</texturefocus>
            <!--MOVIES-->
            <onclick  condition="String.IsEqual(Container(9000).ListItem.Property(defaultID),movies) + StringCompare(Skin.String(moviesshelf),)">Skin.SetString(moviesshelf,WL)</onclick>
            <onclick  condition="String.IsEqual(Container(9000).ListItem.Property(defaultID),movies) + StringCompare(Skin.String(moviesshelf),WL)">Skin.SetString(moviesshelf,RND)</onclick>
            <onclick  condition="String.IsEqual(Container(9000).ListItem.Property(defaultID),movies) + StringCompare(Skin.String(moviesshelf),RND)">Skin.SetString(moviesshelf,)</onclick>
            <!--TVSHOWS-->
            <onclick  condition="String.IsEqual(Container(9000).ListItem.Property(defaultID),tvshows) + StringCompare(Skin.String(TVshelf),)">Skin.SetString(TVshelf,1)</onclick>
            <onclick  condition="String.IsEqual(Container(9000).ListItem.Property(defaultID),tvshows) + StringCompare(Skin.String(TVshelf),1)">Skin.SetString(TVshelf,2)</onclick>
            <onclick  condition="String.IsEqual(Container(9000).ListItem.Property(defaultID),tvshows) + StringCompare(Skin.String(TVshelf),2)">Skin.SetString(TVshelf,)</onclick>
            <!--MUSIC-->
            <onclick  condition="String.IsEqual(Container(9000).ListItem.Property(defaultID),music) + StringCompare(Skin.String(musicshelf),)">Skin.SetString(musicshelf,albums)</onclick>
            <onclick  condition="String.IsEqual(Container(9000).ListItem.Property(defaultID),music) + StringCompare(Skin.String(musicshelf),albums)">Skin.SetString(musicshelf,artists)</onclick>
            <onclick  condition="String.IsEqual(Container(9000).ListItem.Property(defaultID),music) + StringCompare(Skin.String(musicshelf),artists)">Skin.SetString(musicshelf,)</onclick>

            <!--ADDONS-->
            <!--<onclick  condition="Control.IsVisible(315) + StringCompare(Skin.String(addonsshelf),1)">Skin.SetString(addonsshelf,2)</onclick>-->
            <!--<onclick  condition="Control.IsVisible(315) + StringCompare(Skin.String(addonsshelf),2)">Skin.SetString(addonsshelf,3)</onclick>-->
            <!--<onclick  condition="Control.IsVisible(315) + StringCompare(Skin.String(addonsshelf),3)">Skin.SetString(addonsshelf,)</onclick>-->
            <!--<onclick  condition="Control.IsVisible(315) + StringCompare(Skin.String(addonsshelf),)">Skin.SetString(addonsshelf,1)</onclick>-->

            <!--CINEMAS-->
            <!--<onclick  condition="Container(9000).HasFocus(359) + StringCompare(Skin.String(theatersshelf),)">Skin.SetString(theatersshelf,1)</onclick>-->
            <!--<onclick  condition="Container(9000).HasFocus(359) + StringCompare(Skin.String(theatersshelf),1)">Skin.SetString(theatersshelf,2)</onclick>-->
            <!--<onclick  condition="Container(9000).HasFocus(359) + StringCompare(Skin.String(theatersshelf),2)">Skin.SetString(theatersshelf,)</onclick>-->

            <!--DVDS-->
            <!--<onclick  condition="Container(9000).HasFocus(360) + StringCompare(Skin.String(dvdsshelf),)">Skin.SetString(dvdsshelf,2)</onclick>-->
            <!--<onclick  condition="Container(9000).HasFocus(360) + StringCompare(Skin.String(dvdsshelf),1)">Skin.SetString(dvdsshelf,2)</onclick>-->
            <!--<onclick  condition="Container(9000).HasFocus(360) + StringCompare(Skin.String(dvdsshelf),2)">Skin.SetString(dvdsshelf,)</onclick>-->

            <onup>noop</onup>
            <ondown condition="Control.IsVisible(312)">312</ondown>
            <ondown condition="Control.IsVisible(313)">313</ondown>
            <ondown condition="Control.IsVisible(315)">315</ondown>
            <ondown condition="Control.IsVisible(311)">311</ondown>
            <onleft>noop</onleft>
            <onright>noop</onright>
        </control>
        <control type="panel" id="9000" description="ICONE">
            <include>homeanimation</include>
            <centerleft>960</centerleft>
            <top>710</top>
            <width>1800</width>
            <height>1060</height>
            <onleft>9000</onleft>
            <onright>9000</onright>
            <onup>700</onup>
            <ondown>noop</ondown>
            <orientation>vertical</orientation>
            <scrolltime tween="sine" easing="inout">280</scrolltime>
            <itemlayout height="290" width="360">
                <control type="image" description="shade_base">
                    <centerleft>180</centerleft>
                    <top>10</top>
                    <width>350</width>
                    <height>250</height>
                    <texture>icons/iconbase.png</texture>
                </control>
                <control type="image" description="color base">
                    <centerleft>180</centerleft>
                    <centertop>130</centertop>
                    <width>287</width>
                    <height>179</height>
                    <texture diffuse="icons/diffusehomeicon.png">$INFO[ListItem.label2]</texture>
                </control>
                <control type="image" description="THMBSICONS">
                    <centerleft>180</centerleft>
                    <centertop>130</centertop>
                    <width>287</width>
                    <height>179</height>
                    <texture diffuse="icons/diffusehomeicon.png">$INFO[ListItem.Icon]</texture>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                </control>
            </itemlayout>
            <focusedlayout height="290" width="360">
                <control type="group">
                    <animation effect="zoom" start="100" end="130" time="120" center="180,210" tween="Back" easing="Out">Focus</animation>
                    <animation effect="zoom" start="130" end="100" time="120" center="180,210">unFocus</animation>
                    <control type="image" description="shade_base">
                        <centerleft>180</centerleft>
                        <animation effect="slide" start="0,0" end="0,34" time="240" reversible="true" tween="Back" easing="Out">Focus</animation>
                        <top>10</top>
                        <width>350</width>
                        <height>250</height>
                        <texture>icons/iconbase.png</texture>
                    </control>
                    <control type="image" description="color base">
                        <centerleft>180</centerleft>
                        <centertop>130</centertop>
                        <width>287</width>
                        <height>179</height>
                        <texture diffuse="icons/diffusehomeicon.png">$INFO[ListItem.label2]</texture>
                    </control>
                    <control type="image" description="THMBSICONS">
                        <centerleft>180</centerleft>
                        <centertop>130</centertop>
                        <width>287</width>
                        <height>179</height>
                        <texture diffuse="icons/diffusehomeicon.png">$INFO[ListItem.Icon]</texture>
                        <aspectratio scalediffuse="false">scale</aspectratio>
                    </control>
                </control>
                <control type="label" description="label">
                    <animation effect="fade" start="0" end="100" time="180">Focus</animation>
                    <animation effect="fade" start="100" end="0" time="100">unFocus</animation>
                    <centerleft>180</centerleft>
                    <top>234</top>
                    <width>368</width>
                    <height>24</height>
                    <font>size27B</font>
                    <align>center</align>
                    <label>$INFO[ListItem.label]</label>
                </control>
            </focusedlayout>
            <content><include>skinshortcuts-mainmenu</include></content>
        </control>
        <control type="group" id="700" description="Shelf items">
            <include>homeanimation</include>
            <include>Movies</include>
            <include>Squares</include>
            <include condition="Skin.HasSetting(PicturesShelf_Custom)">Pictures_Shortcuts</include>
            <include condition="Skin.HasSetting(AddonsShelf_Custom)">Addons_Shortcuts</include>
            <include condition="!Skin.HasSetting(AddonsShelf_Custom)">Addons_Auto</include>
            <include condition="Skin.HasSetting(hidetv) + Skin.HasSetting(hidemovie)">VAddons_Shortcuts</include>
            <include>Favsshelf</include>
            <include>weather_shelf</include>
        </control>
        <control type="group" description="RSS">
            <control type="rss" description="RSS Feed">
                <visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
                <visible>!Skin.HasSetting(NORSS)</visible>
                <include>VisibleFade</include>
                <left>0</left>
                <top>1046</top>
                <width>1920</width>
                <height>33</height>
                <font>size22</font>
                <urlset>1</urlset>
                <shadowcolor>-</shadowcolor>
                <titlecolor>White</titlecolor>
                <headlinecolor>White</headlinecolor>
                <textcolor>gray</textcolor>
            </control>
        </control>
        <control type="group">
            <visible>Player.HasAudio</visible>
            <visible>!IntegerGreaterThan(Player.Time,8) | !IntegerGreaterThan(Player.TimeRemaining,8)</visible>
            <animation effect="slide" end="0,-128" condition="Window.IsActive(DialogExtendedProgressBar.xml)">Conditional</animation>
            <left>1190</left>
            <top>944</top>
            <animation effect="fade" start="0" end="100" time="500">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="500">WindowClose</animation>
            <control type="image" description="Dialog BG">
                <width>720</width>
                <height>128</height>
                <texture border="25">images/notification.png</texture>
            </control>
            <control type="image" description="File Icon">
                <left>22</left>
                <centertop>64</centertop>
                <width>90</width>
                <height>90</height>
                <aspectratio>keep</aspectratio>
                <texture>$INFO[MusicPlayer.Cover]</texture>
            </control>
            <control type="grouplist">
                <left>130</left>
                <height>120</height>
                <align>center</align>
                <itemgap>8</itemgap>
                <control type="label" id="401" description="Heading">
                    <width>575</width>
                    <height>20</height>
                    <font>size21</font>
                    <align>left</align>
                    <aligny>center</aligny>
                    <textcolor>black</textcolor>
                    <label>$INFO[MusicPlayer.Title]</label>
                </control>
                <control type="label" id="402" description="Message">
                    <width>575</width>
                    <height>20</height>
                    <font>size21</font>
                    <align>left</align>
                    <aligny>center</aligny>
                    <textcolor>black</textcolor>
                    <shadowcolor>-</shadowcolor>
                    <label>$INFO[MusicPlayer.Artist]</label>
                </control>
                <control type="label" id="402" description="Message">
                    <width>575</width>
                    <height>20</height>
                    <font>size21</font>
                    <align>left</align>
                    <aligny>center</aligny>
                    <textcolor>black</textcolor>
                    <shadowcolor>-</shadowcolor>
                    <label>$INFO[MusicPlayer.Album]</label>
                </control>
            </control>
        </control>
        <control type="label" description="Clock">
            <visible>!System.Date(04-01,04-01)</visible>
            <right>60</right>
            <top>20</top>
            <width>500</width>
            <height>25</height>
            <align>right</align>
            <font>size27</font>
            <shadowcolor>-</shadowcolor>
            <textcolor>white</textcolor>
            <label>$INFO[System.Date(ddd d mmm)] â€¢ $INFO[System.Time]</label>
        </control>
        <control type="image">
            <right>20</right>
            <top>18</top>
            <width>30</width>
            <height>30</height>
            <colordiffuse>kodi</colordiffuse>
            <texture>kodi_icon.png</texture>
        </control>
    </controls>
</window>
