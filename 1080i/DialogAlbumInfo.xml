          <visible>container.content(artists)</visible>
          <top>270</top>
          <width>1050</width>
          <height>45</height>
          <font>size33</font>
          <align>left</align>
          <textcolor>Grey</textcolor>
          <scroll>false</scroll>
          <label>$INFO[ListItem.Property(Artist_Style)]</label>
        </control>
        <control type="label" description="Moods Label">
          <visible>container.content(artists)</visible>
          <visible>IsEmpty(ListItem.Property(Artist_Style))</visible>
          <top>270</top>
          <width>1050</width>
          <height>45</height>
          <font>size33</font>
          <align>left</align>
          <textcolor>Grey</textcolor>
          <scroll>false</scroll>
          <label>$INFO[ListItem.Property(Artist_Mood)]</label>
        </control>
        <control type="label" description="Year and Genre">
          <top>315</top>
          <width>1050</width>
          <height>45</height>
          <font>size33</font>
          <align>left</align>
          <textcolor>Grey</textcolor>
          <label>$INFO[ListItem.Year,, â€¢ ]$INFO[ListItem.Genre]</label>
        </control>
        <control type="label" description="Genre">
          <top>315</top>
          <width>1050</width>
          <height>45</height>
          <font>size33</font>
          <align>left</align>
          <textcolor>Grey</textcolor>
          <label>$INFO[ListItem.Property(Artist_Genre)]</label>
        </control>
        <control type="textbox" id="4" description="Plot">
          <left>0</left>
          <top>405</top>
          <width>1050</width>
          <height>378</height>
          <font>size33</font>
          <align>justify</align>
          <autoscroll delay="6500" time="4000" repeat="10000"></autoscroll>
        </control>
      </control>
    </control>
    <control type="label" description="Path">
      <visible>Skin.HasSetting(ShowFileInfo)</visible>
      <left>60</left>
      <top>990</top>
      <width>1800</width>
      <height>27</height>
      <font>size22</font>
      <align>left</align>
      <textcolor>Grey</textcolor>
      <haspath>true</haspath>
      <scroll>true</scroll>
      <label>$INFO[ListItem.FilenameAndPath]</label>
    </control>
    <control type="image">
      <left>0</left>
      <top>1023</top>
      <height>60</height>
      <width>1920</width>
      <aspectratio>stretch</aspectratio>
