    </control>
    <control type="group">
      <posy>10</posy>
      <control type="label" description="Clock">
        <posx>60</posx>
        <width>695</width>
        <height>60</height>
        <font>size33B</font>
        <textcolor>White</textcolor>
        <label>$LOCALIZE[142] $INFO[System.Time]</label>
      </control>
      <control type="label">
        <posx>60</posx>
        <posy>55</posy>
        <width>495</width>
        <height>30</height>
        <label>[B]$INFO[Player.Time][/B]</label>
        <font>size26</font>
      </control>
      <control type="label" description="End time">
        <posx>60r</posx>
        <width>695</width>
        <height>60</height>
        <align>right</align>
        <font>size33B</font>
        <textcolor>White</textcolor>
        <label>$LOCALIZE[31005]: $INFO[Player.FinishTime]</label>
      </control>
      <control type="label">
        <posx>60r</posx>
        <posy>55</posy>
        <height>30</height>
        <width>195</width>
        <align>right</align>
        <label>[B]- $INFO[Player.TimeRemaining][/B]</label>
        <font>size26</font>
      </control>
    </control>
  </controls>
